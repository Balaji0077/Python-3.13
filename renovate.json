{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:pinDigests",
    "docker:enableMajor"
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "osvVulnerabilityAlerts": true,
  "docker": {
    "pinDigests": true
  },
  "customManagers": [
    {
      "customType": "regex",
      "description": "ENV/ARG versions with renovate comment (any datasource); RUN must use ${VAR} to get new version",
      "fileMatch": [".*([Dd]ockerfile|[Cc]ontainerfile)(\\..*)?$"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[^\\s]+) depName=(?<depName>[^\\s]+)(?: versioning=(?<versioning>[^\\s]+))?\\n\\s*(?:ENV|ARG) .*?=(?<currentValue>[^\\s\\n]+)"
      ]
    }
  ],
  "packageRules": [
    {
      "description": "Automerge patch/minor Docker image updates (security fixes)",
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["patch", "minor", "digest"],
      "automerge": false
    }
  ]
}
